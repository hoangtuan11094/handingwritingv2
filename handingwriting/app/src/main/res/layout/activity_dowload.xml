<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@color/colorTongThe"
    tools:context="com.hoangtuan.translatechinesehwriting.DownloadActivity">
<ImageView
    android:layout_marginTop="50dp"
    android:src="@drawable/ic_logo"
    android:layout_width="128dp"
    android:layout_height="128dp" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llThuLai"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <TextView
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="Bạn vừa bị mất kết nối mạng. \nVui lòng thử lại!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnThuLai"
            android:textAllCaps="false"
            android:text="Thử lại"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
