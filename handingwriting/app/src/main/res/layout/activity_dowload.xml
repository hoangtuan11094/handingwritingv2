<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@color/colorTongThe"
    tools:context="com.hoangtuan.translatechinesehwriting.DownloadActivity">
<ImageView
    android:layout_marginTop="@dimen/activity_dowload_img_layout_marginTop"
    android:src="@drawable/ic_logo"
    android:layout_width="@dimen/ic_logo_layout_width_height"
    android:layout_height="@dimen/ic_logo_layout_width_height" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llThuLai"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_dowload_img_LinearLayout_height">
        <TextView
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="@string/mat_ket_noi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnThuLai"
            android:textAllCaps="false"
            android:text="@string/thu_lai"
            android:layout_marginTop="@dimen/activity_dowload_btn_layout_marginTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
