<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_layout_height"

    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="center"
    android:background="@color/colorTongThe">
<ImageView
    android:src="@drawable/ic_logo"
    android:layout_width="@dimen/header_ic_logo_height_w"
    android:layout_height="@dimen/header_ic_logo_height_w" />
    <TextView
        android:textSize="14sp"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:text="http://hdpsolution.com/"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>